{
    "compilerOptions": {
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": ["dom", "esnext"],
        "moduleResolution": "node",
        "isolatedModules": true,
        "noImplicitAny": false,
        "outDir": "lib",
        "sourceMap": true,
        "module": "esnext",
        "strict": true,
        "target": "esnext"
    },
    "include": ["src/**/*"]
}
